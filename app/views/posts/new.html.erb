<h1>New Post</h1>

<%= form_with :model => @post do |form| %>
<p>
  <%= form.label "author", "User"%>
  <%= form.text_field "author"%>
</p>
<p>
  <%= form.label "image", "Image URL"%>
  <%= form.text_field "image"%>
</p>
<p>
  <%= form.label "body", "Caption"%>
  <%= form.text_field "body"%>
</p>
  <%= form.submit %>
<% end %>
